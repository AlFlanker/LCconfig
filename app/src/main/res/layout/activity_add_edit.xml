<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_edit_form"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="ru.yugsys.vvvresearch.lconfig.views.AddEditActivity">
    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginCard"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    app:columnCount="5"
                    app:orientation="horizontal"
            >

                <TextView
                        android:text = "@string/type_device_is"
                        app:layout_column="0"
                        app:layout_columnSpan="4"
                        style="@style/TextAppearance.AppCompat.Headline"
                />
                <Spinner
                        android:id="@+id/lc5_spinner_type"
                        android:hint="@string/prompt_type"
                        android:maxLines="1"
                        android:entries="@array/controller_type_list"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        app:layout_gravity="end"
                />
                <TextView
                        android:text = "@string/out_type_device_is"
                        app:layout_column="0"
                        app:layout_columnSpan="4"
                        style="@style/TextAppearance.AppCompat.Headline"
                />
                <Spinner
                        android:id="@+id/lc5_spinner_out_type"
                        android:hint="@string/prompt_outType"
                        android:maxLines="1"
                        android:entries="@array/out_type_list"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        app:layout_gravity="end"
                />
                <TextView
                        android:text = "@string/label_isotaa"
                        app:layout_column="0"
                        app:layout_columnSpan="4"
                        style="@style/TextAppearance.AppCompat.Headline"
                />
                <Switch
                        android:id="@+id/lc5_switch_isOTAA"
                        android:switchPadding="@dimen/marginCard"
                        android:checked="false"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        app:layout_gravity="end"
                />

                <TextView
                        android:text = "@string/label_latitude"
                        app:layout_column="0"
                        app:layout_columnSpan="1"
                        style="@style/TextAppearance.AppCompat.Headline"
                />

                <EditText
                        android:id="@+id/lc5_edit_gps_latitude"
                        android:hint="@string/prompt_gps_latitude"
                        android:maxLines="1"
                        app:layout_column="1"
                        app:layout_columnSpan="1"
                />
                <TextView
                        android:text = "@string/label_longitude"
                        app:layout_column="2"
                        app:layout_columnSpan="1"
                        style="@style/TextAppearance.AppCompat.Headline"
                />
                <EditText
                        android:id="@+id/lc5_edit_gps_longitude"
                        android:hint="@string/prompt_gps_longitude"
                        android:maxLines="1"
                        app:layout_column="3"
                        app:layout_columnSpan="1"
                />
                <ImageButton
                        android:src="@drawable/ic_add_location_black_24dp"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        android:background="#00000000"
                        app:layout_gravity="end"
                />
                <RelativeLayout
                        android:id="@+id/buttonExpand"
                        android:gravity="fill"
                        app:layout_column="0"
                        app:layout_columnSpan="5"
                >
                    <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/button_triangle_add_edit"
                            android:background="@drawable/triangle"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="@dimen/marginCard"
                    />

                    <TextView
                            android:maxLines="1"
                            android:text="@string/more"
                            android:id="@+id/more"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@id/button_triangle_add_edit"/>
                </RelativeLayout>
                <com.github.aakira.expandablelayout.ExpandableLinearLayout
                        android:id="@+id/expandableLayoutAddEdit"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:orientation="vertical"
                        app:ael_duration="400"
                        app:ael_expanded="false"
                        android:gravity="fill"
                        app:layout_column="0"
                        app:layout_columnSpan="5"
                >


                    <EditText
                            android:id="@+id/lc5_edit_deveui"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_devEUI"
                            android:maxLines="1"
                    />

                    <EditText
                            android:id="@+id/lc5_edit_appEUI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_appEUI"
                            android:maxLines="1"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_appKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_appKey"
                            android:maxLines="1"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_nwkID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_nwkID"
                            android:maxLines="1"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_devAdr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_devAdr"
                            android:maxLines="1"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_nwkSKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_nwkSKey"
                            android:maxLines="1"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_appSKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_appSKey"
                            android:maxLines="1"
                    />
                </com.github.aakira.expandablelayout.ExpandableLinearLayout>
                <Button
                        android:id="@+id/action_add_edit"
                        style="?android:textAppearanceSmall"
                        android:layout_marginTop="16dp"
                        android:text="@string/action_addedit"
                        android:gravity="fill"
                        app:layout_column="0"
                        app:layout_columnSpan="5"
                        app:layout_gravity="end"
                        android:textStyle="bold"/>


            </android.support.v7.widget.GridLayout>


        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
