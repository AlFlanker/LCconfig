<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tileMode="repeat"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@drawable/background"
        tools:showIn="@layout/activity_add_edit"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context="ru.yugsys.vvvresearch.lconfig.views.AddEditActivity">
    <ScrollView
            android:id="@+id/lc5_scrollView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
    >

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginCard"
        >
            <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    app:columnCount="5"
                    app:orientation="horizontal"
            >

                <TextView
                        android:text="@string/type_device_is"
                        app:layout_column="0"
                        app:layout_columnSpan="4"
                        style="@style/BaseTextView.SubHead"
                />
                <Spinner
                        android:id="@+id/lc5_spinner_type"
                        android:hint="@string/prompt_type"
                        android:entries="@array/controller_type_list"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        app:layout_gravity="end"
                />
                <TextView
                        android:text="@string/out_type_device_is"
                        app:layout_column="0"
                        app:layout_columnSpan="4"
                        style="@style/BaseTextView.SubHead"
                />
                <Spinner
                        android:id="@+id/lc5_spinner_out_type"
                        android:hint="@string/prompt_outType"

                        android:entries="@array/out_type_list"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        app:layout_gravity="end"
                />
                <TextView
                        android:text="@string/label_isotaa"
                        app:layout_column="0"
                        app:layout_columnSpan="4"
                        style="@style/BaseTextView.SubHead"
                />

                <Switch
                        android:id="@+id/lc5_switch_isOTAA"
                        android:switchPadding="@dimen/marginCard"
                        android:checked="false"
                        app:layout_column="4"
                        app:layout_columnSpan="1"
                        app:layout_gravity="end"
                />


                <EditText
                        android:id="@+id/lc5_edit_gps_latitude"
                        android:hint="@string/prompt_gps_latitude"
                        android:inputType="numberDecimal"
                        style="@style/BaseTextView.Body"
                />
                <TextView
                        android:text="@string/label_degree_comma"
                        style="@style/BaseTextView.Body"
                />

                <EditText
                        android:id="@+id/lc5_edit_gps_longitude"
                        android:hint="@string/prompt_gps_longitude"
                        android:inputType="numberDecimal"
                        style="@style/BaseTextView.Body"
                />
                <TextView
                        android:text="@string/label_degree"
                        style="@style/BaseTextView.Body"
                />
                <ImageView android:id="@+id/tile_divider"
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="?android:attr/dividerHorizontal"
                           app:layout_columnSpan="5"
                           app:layout_gravity="fill"
                />
                <LinearLayout
                        android:id="@+id/buttonExpand"
                        app:layout_gravity="fill"
                        app:layout_columnSpan="5"
                        android:layout_margin="@dimen/defaultMargin"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:text="@string/more"
                            android:gravity="center_vertical"
                            style="@style/BaseTextView.SubHead"
                    />
                    <RelativeLayout
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:layout_width="0dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/button_triangle_add_edit"
                                android:background="@drawable/ic_expand_more_black_24dp"
                                android:layout_marginEnd="@dimen/marginCard"
                        />
                    </RelativeLayout>
                </LinearLayout>
                <com.github.aakira.expandablelayout.ExpandableLinearLayout
                        android:id="@+id/expandableLayoutAddEdit"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        app:ael_duration="400"
                        app:ael_expanded="false"
                        android:gravity="fill"
                        app:layout_column="0"
                        app:layout_columnSpan="5"
                >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_devEUI"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lc5_edit_deveui"
                            android:hint="@string/prompt_devEUI"
                            style="@style/BaseEditable.Body.EditHEX"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_appEUI"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_appEUI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_appEUI"
                            style="@style/BaseEditable.Body.EditHEX"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_appKey"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_appKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_appKey"
                            style="@style/BaseEditable.Body.EditHEX"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_nwkID"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_nwkID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_nwkID"
                            style="@style/BaseEditable.Body.EditHEX"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_devAdr"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_devAdr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_devAdr"
                            style="@style/BaseEditable.Body.EditHEX"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_nwkSKey"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_nwkSKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_nwkSKey"
                            style="@style/BaseEditable.Body.EditHEX"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_appSKey"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_appSKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_appSKey"
                            style="@style/BaseEditable.Body.EditHEX"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_comment"
                            app:layout_column="0"
                            app:layout_columnSpan="4"
                            style="@style/BaseTextView.Caption.Expandable"
                    />
                    <EditText
                            android:id="@+id/lc5_edit_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_comment"
                            android:maxLength="50"

                    />
                </com.github.aakira.expandablelayout.ExpandableLinearLayout>


            </android.support.v7.widget.GridLayout>


        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>

